{% extends "base.html" %}

{% block body_tag %}<body class="category _sketches">{% endblock %}
{% block content %}
    <header>
    	{% include '_nav.twig' %}
    </header>

    <section class="container _intro">
	    <h1 class="intro-title">Sketches</h1>
	    <div class="slice">
		    <h3 class="slice-hook">What do we do?</h3>
		    <div class="slice-main">
			    <p>{{ category.projects.description }}</p>
			</div>
		</div>
    </section>

    <section class="container">
	    <div class="gallery">
	        {% setcontent sketches = 'sketches' orderby 'name' %}
	    	{% for thisSketch in sketches %}
	    		{% set thisStatusFlag = '' %}
	    		{% if thisSketch.status|length %} 
	    		    {% set thisStatus = 'active' %} 
	    		{% else %} 
	    		    {% set thisStatus = 'inactive' %} 
	    		    {% set thisStatusFlag = '_inactive' %}
	    		{% endif %}

				<!-- a.gallery-item can get an '_inactive' modifier that puts it into inactive mode --> 
		    	<a class="gallery-item {{ thisStausFlag }}" href="{{ thisSketch.link }}">
		    		<figure class="gallery-item-primaryImage">
	
		    			<!-- using srcset for reponsive density -->
			    		{# <img src="{{ thisSketch.galleryImage.1x }}" srcset="{{ thisSketch.galleryImage.1x }}, {{ thisSketch.galleryImage.2x }} 2x, {{ thisSketch.galleryImage.3x }} 3x" /> #}
		    		</figure>
		    		<strong class="item-title"><a href="{{ thisSketch.link }}">{{ thisSketch.name }}</a></strong>
		    		<ul class="item-specs">
			    		<li class="item-specs-logline">{{ thisSketch.logline }}</li>
			    		<li class="item-specs-date">{{ thisSketch.datecreated }}</li>
			    		<li class="item-specs-status">{{ thisStatus }}</li>
		    		</ul>
		    	</a>
	    	{% endfor %}
	    </div>
	</section>

{% endblock %}

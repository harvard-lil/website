    <!-- Main Blog Content -->
    <div class="large-8 columns" role="content">

        <h2>Sketches</h2>
        {% setcontent sketches = 'sketches' orderby 'title' %}
        {% for sketch in sketches %}
            <article>

                <h2><a href="{{ sketch.link }}">{{ sketch.title }}</a></h2>

                {% if sketch.image!="" %}
                    <div class="large-4 imageholder">
                        <a href="{{ image(sketch.image) }}">
                            <img src="{{ thumbnail(sketch.image, 400, 260) }}">
                        </a>
                    </div>
                {% endif %}

                <p>{{ sketch.teaser }}</p>

            </article>
        {% endfor %}


    </div>

    <!-- End Main Content -->



    <!-- Main Blog Content -->
    <div class="large-8 columns" role="content">

        <h2>Projects</h2>
        {% setcontent projects = 'projects' orderby 'name' %}
        {% for project in projects %}
            <article>

                <h2><a href="{{ project.link }}">{{ project.name }}</a></h2>

                {% if project.image!="" %}
                    <div class="large-4 imageholder">
                        <a href="{{ image(project.image) }}">
                            <img src="{{ thumbnail(project.image, 400, 260) }}">
                        </a>
                    </div>
                {% endif %}

                <p>{{ project.logline }}</p>

            </article>
        {% endfor %}


    </div>

    <!-- End Main Content -->



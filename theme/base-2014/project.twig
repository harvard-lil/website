{% include '_header.twig' %}
{% include '_nav.twig' %}

<!-- Main Page Content and Sidebar -->

    <!-- Main Blog Content -->
    <div class="large-8 columns">

        <article>

            <h2>{{ record.title }}</h2>

            {% if record.image!="" %}
                <div class="large-4 columns imageholder">
                    <a href="{{ image(record.image) }}">
                        <img src="{{ thumbnail(record.image, 400, 260) }}">
                    </a>
                </div>
            {% endif %}

            {{ record.logline }}

            {# if the entry has a video, display it. #}
            {% if record.video is not empty %}
                <div class="clearfix"></div>
                {{ record.video.responsive }}
            {% endif %}

            {{ record.description }}
            
            {% if record.github_repo != "" %}
                <p><a href="{{ record.github_repo }}">GitHub</a></p>
            {% endif %}
            
            {% if record.project_website != "" %}
                <p><a href="{{ record.project_website }}">Project website</a></p>
            {% endif %}
            
            {% set relatedrecords = record.related('about') %}
                {% if relatedrecords is not empty %}
                    <p>People</p>
                    {% for related in relatedrecords %}
                        <div>
                            <img src="{{ thumbnail(related.image, 200, 150) }}">
                            <p>{{ related.name }}</p>
                            <p>{{ related.role }}</p>
                        </div>
                    {%  endfor %}
                {% endif %}

        </article>


    </div>

    <!-- End Main Content -->

<!-- End Main Content and Sidebar -->



{% include '_footer.twig' %}
